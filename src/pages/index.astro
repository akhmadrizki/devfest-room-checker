---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
import RoomList from '../components/RoomList';
import '@/styles/global.css';

const pageTitle = "DevFest Bali 2024";
---

<Layout title={pageTitle}>
  <Header />
  <div class="w-full lg:h-[400px] h-[260px] bg-[url('../../public/assets/banner.jpg')] bg-cover bg-center p-2 flex justify-center items-center">
    <h1 class="lg:text-5xl text-4xl font-bold text-white" style="text-shadow: 1px 1px 4px #1e1e1e;"> Let's Build Something Great Together</h1>
  </div>
  <h1 class="text-lg text-[#1e1e1e] text-center font-bold my-8 bg-[#f8d8d8] w-40 rounded-full py-3 border border-black">
    Our Rooms
  </h1>
  <RoomList client:load />

  <h1 class="text-lg text-[#1e1e1e] text-center font-bold my-8 bg-[#c3ecf6] w-56 rounded-full py-3 border border-black">
    Our Amazing Sponsor
  </h1>
</Layout>