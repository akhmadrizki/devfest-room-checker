  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/icon.png" />
    <title>{title}</title>
  </head>
  <body>
    <main class="container max-w-6xl mx-auto p-4 bg-white shadow-lg">
      <slot />
    </main>
  </body>
</html>